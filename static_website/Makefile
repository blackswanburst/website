all:: build

depend::
	$(OPAM) install $(PKGS) --verbose

main.native:
	$(BUILD) main.native

main.native.o:
	$(BUILD) main.native.o

build: main.native
	ln -nfs _build/main.native mir-www

clean::
	ocamlbuild -clean

-include Makefile.user
